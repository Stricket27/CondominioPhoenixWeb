@model Infraestruture.Models.PlanCobro

@{
    ViewBag.Title = "Detalle";

    decimal? precioTotal = 0;
}

<h2>Detalle</h2>

<div>
    <h4>Plan de cobro</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Descripción
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            Estado actual
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EstadoActual)
        </dd>

        <dt>
            Rubros asignados
        </dt>


        @foreach (var r in Model.RubroCobro)
        {
            <dd>@r.Descripcion: ₡ @r.Precio</dd>
            precioTotal += r.Precio;
        }
        <dt>Precio total</dt>

        <dd>₡ @precioTotal</dd>
    </dl>
</div>
<p>
    <a href="@Url.Action("Index", "PlanCobro")" class="btn btn-secondary"><i class="fa-solid fa-arrow-left"></i> Volver a la lista</a>
</p>
